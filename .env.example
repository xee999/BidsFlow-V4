# Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173,https://bidsflow-app.run.app

# Database
MONGODB_URI=mongodb://admin:secretpassword@mongodb:27017/bidsflow?authSource=admin
# Compose variables
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secretpassword

# Security (Required)
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_super_strong_jwt_secret_must_be_at_least_32_chars
# Optional: Set a specific password for the default admin (otherwise a random one is generated)
ADMIN_PASSWORD=

# AI Integration
GEMINI_API_KEY=your_gemini_api_key_here
# Legacy support (deprecated)
API_KEY=

# Process Management
RESTART_TRIGGER=any_value_to_force_restart
